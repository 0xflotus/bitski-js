{
  "name": "bitski",
  "description": "Bitski Javascript SDK",
  "license": "MIT",
  "main": "lib/bitski.js",
  "module": "dist/esm/bitski.js",
  "types": "lib/bitski.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitskiCo/bitski-js"
  },
  "version": "0.2.0-beta.9",
  "scripts": {
    "lint": "tslint 'src/**/*.ts'",
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.module.json && npm run bundle && npm run docs",
    "bundle": "browserify -s Bitski -e dist/esm/bitski.js -t [ babelify --presets [ es2015 ] ] > dist/bitski.bundle.js",
    "prepare": "tsc -p tsconfig.main.json && tsc -p tsconfig.module.json",
    "prepack": "npm run build",
    "docs": "typedoc",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@types/ethereum-protocol": "^1.0.0",
    "@types/events": "^1.2.0",
    "bitski-provider": "0.2.0-beta.9",
    "oidc-client": ">=1.5.2",
    "web3-provider-engine": "^14.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "babel-preset-es2015": "^6.24.1",
    "browserify": "^16.2.3",
    "find": "^0.2.9",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^1.6.6",
    "jest-junit": "^5.1.0",
    "ts-jest": "^23.10.0",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "typedoc": "^0.12.0",
    "typedoc-plugin-markdown": "github:OutThereLabs/typedoc-plugin-markdown",
    "typescript": "^3.1.6",
    "xhr-mock": "^2.4.1"
  },
  "jest": {
    "automock": false,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "text",
      "html",
      "cobertura"
    ],
    "setupFiles": [
      "./tests/util/setup-jest.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(bitski-provider)/)"
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
