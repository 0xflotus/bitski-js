{
  "name": "bitski",
  "description": "Bitski JavaScript SDK",
  "license": "MIT",
  "main": "dist/bitski.umd.js",
  "module": "dist/bitski.es5.js",
  "typings": "dist/types/bitski.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitskiCo/bitski-js-sdk"
  },
  "version": "0.1.2",
  "scripts": {
    "lint": "tslint 'src/**/*.ts'",
    "build": "tsc && rollup -c rollup.config.ts && webpack --mode production && typedoc",
    "prepack": "npm run build",
    "dev": "rollup -c rollup.config.ts -w",
    "docs": "typedoc",
    "test": "jest --coverage"
  },
  "dependencies": {
    "oidc-client": "^1.4.1",
    "web3": "^1.0.0-beta.33",
    "web3-providers-http": "^1.0.0-beta.33",
    "xhr2": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "jest": "^22.4.3",
    "jest-junit": "^3.6.0",
    "raw-loader": "^0.5.1",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-img": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.12.0",
    "ts-jest": "^22.4.4",
    "ts-loader": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "github:OutThereLabs/typedoc-plugin-markdown",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "xhr-mock": "^2.3.1"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "text",
      "html",
      "cobertura"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testResultsProcessor": "jest-junit",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
